<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="notaryapp.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Material application theme. -->
    <style name="DashTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="SpinnerTheme">
        <item name="android:background">@drawable/customspinner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DashSpinnerTheme">
        <item name="android:background">@drawable/latest_arrow</item>
    </style>

    <style name="SpinnerThemeLicense">
        <item name="android:background">@drawable/custom_spinner_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="StrokeForText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="HelperText">
        <item name="android:paddingLeft">200dp</item>
        <item name="android:paddingStart">200dp</item>
        <item name="android:layout_marginStart">200dp</item>
        <item name="android:layout_marginLeft">200dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="HintText">
        <item name="android:textColorHint">@color/textInputHint</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ShareHintText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputLayoutAppearance">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ShareTextInputLayoutAppearance">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/ShareHintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:listDivider">@drawable/list_divider</item>
    </style>

    <style name="Tooltip">
        <item name="android:text">TESSSSSS</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

