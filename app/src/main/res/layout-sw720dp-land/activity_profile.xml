                <!--          -->

                <!--        </ScrollView>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewresult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="@dimen/full_screen_card_margin_tab"
                    android:layout_marginEnd="@dimen/full_screen_card_margin_tab"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewProfile">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/NotaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:text="NOTARY LICENSE(S)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/subHeadingText"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />




                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:id="@+id/constrainAddLicense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/NotaryText">


                            <RelativeLayout
                                android:windowSoftInputMode="adjustPan"
                                android:id="@+id/relative_add_license"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/buttonHeight"
                                android:background="@drawable/button_style_primary"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    tools:ignore="SpUsage"
                                    android:id="@+id/txt_addLicense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/add_license_num"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/normalText"
                                    android:textStyle="normal" />


                            </RelativeLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Button
                            android:id="@+id/btnNotaryInfo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/round_info"
                            android:text="i"
                            android:textAllCaps="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </Button>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

