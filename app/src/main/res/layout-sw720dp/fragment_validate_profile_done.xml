<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context=".ui.fragments.validate_id.Validate_ProfileInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:elevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_pro_back"
            android:layout_width="@dimen/btnCloseBackSize"
            android:layout_height="@dimen/btnCloseBackSize"
            android:layout_marginStart="@dimen/btnBackStart"
            android:background="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_medium"
            android:gravity="center"
            android:text="@string/id_verifications"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/headerText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_pro_close"
            app:layout_constraintStart_toEndOf="@+id/btn_pro_back"
            app:layout_constraintTop_toTopOf="parent"/>


        <Button
            android:id="@+id/btn_pro_close"
            android:layout_width="@dimen/btnCloseBackSize"
            android:layout_height="@dimen/btnCloseBackSize"
            android:layout_marginEnd="@dimen/btnCloseEnd"
            android:background="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.notaryapp.components.ScrollViewExt
        android:id="@+id/previewScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            android:paddingBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/previewScroll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toBottomOf="@+id/previewScroll">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="@dimen/full_screen_form_card_width"
                    android:layout_marginEnd="@dimen/full_screen_form_card_width"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/oswald_medium"
                            android:gravity="start"
                            android:text="@string/profile"
                            android:visibility="gone"
                            android:textAllCaps="true"
                            android:textColor="@color/textblue"
                            android:textSize="@dimen/subHeadingText"
                            app:layout_constraintEnd_toStartOf="@+id/infolicense2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:id="@+id/infolicense2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/ic_info"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="i"
                            android:textSize="@dimen/normalText"
                            android:visibility="invisible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/horizontalScrollBox"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text">

                            <HorizontalScrollView
                                android:id="@+id/horizontalScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="210dp"
                                android:scrollbars="none"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <!--android:paddingLeft="60dp"-->
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="210dp"
                                    android:layout_gravity="center"
                                    >

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/card_face"
                                        android:layout_width="170dp"
                                        android:layout_height="170dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:clipChildren="false"
                                        android:clipToPadding="false"
                                        android:divider="@android:color/transparent"
                                        android:dividerHeight="0.0px"
                                        android:padding="2dp"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/card_front"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:orientation="vertical">
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                                <ProgressBar
                                                    android:id="@+id/imageProfileProgress"
                                                    android:layout_gravity="center"
                                                    android:background="@android:color/transparent"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:scaleType="centerCrop"
                                                    android:contentDescription="@string/app_name"
                                                    android:layout_centerInParent="true"
                                                    android:indeterminateDrawable="@drawable/progress_indeterminate"
                                                    />
                                                <ImageView
                                                    android:id="@+id/face"
                                                    android:layout_width="110dp"
                                                    android:layout_height="110dp"
                                                    android:layout_gravity="center"
                                                    android:contentDescription="@string/face_scan"
                                                    android:scaleType="centerInside" />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="30dp"
                                                android:fontFamily="@font/roboto_regular"
                                                android:gravity="center"
                                                android:text="@string/face_scan"
                                                android:textAlignment="gravity"
                                                android:textColor="@color/colorThickBlue"
                                                tools:ignore="SpUsage" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <!--app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card_back"
                                    app:layout_constraintStart_toEndOf="@id/card_face"
                                    app:layout_constraintTop_toTopOf="parent"-->

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/card_front"
                                        android:layout_width="170dp"
                                        android:layout_height="170dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:layout_marginStart="10dp"
                                        android:padding="2dp"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/doc1Img"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:contentDescription="@string/front_id"
                                                android:scaleType="fitXY"
                                                android:layout_gravity="center"
                                                android:layout_centerInParent="true"/>

                                            <TextView
                                                android:id="@+id/frontIdText"
                                                android:layout_width="match_parent"
                                                android:layout_height="30dp"
                                                android:fontFamily="@font/roboto_regular"
                                                android:gravity="center"
                                                android:text="@string/front_id"
                                                android:textAlignment="gravity"
                                                android:textColor="@color/colorThickBlue"
                                                android:layout_gravity="bottom"
                                                android:layout_alignParentBottom="true"/>

                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/card_back"
                                        android:layout_width="170dp"
                                        android:layout_height="170dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:padding="2dp"
                                        android:visibility="gone"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="5dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/card_front"
                                        app:layout_constraintTop_toTopOf="parent">


                                        <LinearLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/doc2Img"
                                                android:layout_width="170dp"
                                                android:layout_height="140dp"
                                                android:contentDescription="@string/back_id"
                                                android:scaleType="fitXY" />

                                            <TextView
                                                android:id="@+id/backIdText"
                                                android:layout_width="match_parent"
                                                android:layout_height="30dp"
                                                android:fontFamily="@font/roboto_regular"
                                                android:gravity="center"
                                                android:text="@string/back_id"
                                                android:textAlignment="gravity"
                                                android:textColor="@color/colorThickBlue"
                                                tools:ignore="SpUsage" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </HorizontalScrollView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:paddingEnd="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollBox">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/firstNameText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/firstName"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/firstName"
                                    android:drawableStart="@drawable/ic_person_field"
                                    android:drawablePadding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"
                                    android:theme="@style/TextInputLayoutAppearance"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/lastNameText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/lastName"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/firstNameText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/lastName"
                                    android:drawableStart="@drawable/ic_person_field"
                                    android:drawablePadding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapSentences"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/emailText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/regemail"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/lastNameText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/email"
                                    android:drawableStart="@drawable/ic_mail_field"
                                    android:drawablePadding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/phoneText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/phoneNumber"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/emailText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/phoneNo"
                                    android:drawableStart="@drawable/ic_phone_field"
                                    android:drawablePadding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/address1Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/addressline1"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/phoneText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/addressLine1"
                                    android:drawableStart="@drawable/ic_location_field"
                                    android:drawablePadding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/address2Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/addressline2"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/address1Text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/addressLine2"
                                    android:drawableStart="@drawable/ic_location_field"
                                    android:drawablePadding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/cityText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/city"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintBottom_toTopOf="@id/stateText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/address2Text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/city"
                                    android:drawableStart="@drawable/ic_location_field"
                                    android:drawablePadding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/stateText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/state"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintBottom_toTopOf="@id/zipText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cityText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/state"
                                    android:drawableStart="@drawable/ic_location_field"
                                    android:drawablePadding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/zipText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="@string/zip"
                                android:theme="@style/TextInputLayoutAppearance"
                                app:boxBackgroundColor="#FFF3F3F3"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/stateText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/zip"
                                    android:drawableStart="@drawable/ic_location_field"
                                    android:drawablePadding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:imeOptions="actionDone"
                                    android:importantForAutofill="no"
                                    android:inputType="number"
                                    android:maxLength="5"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColor="@color/textblue"
                                    android:textSize="@dimen/normalText"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardTwo">

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>


