                            android:fontFamily="@font/oswald_medium"
                            android:text="@string/select_the_method_you"
                            android:textAlignment="viewStart"
                            android:textStyle="bold"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
