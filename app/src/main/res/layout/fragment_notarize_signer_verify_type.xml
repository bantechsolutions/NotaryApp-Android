                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/white_bg_bordered_r">

                            <androidx.constraintlayout.widget.ConstraintLayout
