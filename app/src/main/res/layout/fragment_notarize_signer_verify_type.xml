                                        app:layout_constraintEnd_toEndOf="@+id/blueRound1_1"
                                        app:layout_constraintStart_toStartOf="@+id/blueRound1_1"
                                        app:layout_constraintTop_toTopOf="@+id/blueRound1_1" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
