<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/box"
    android:layout_width="200dp"
    android:layout_height="90dp"
    app:cardElevation="15dp"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/white_bg_dash"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/stampImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_person"
            android:contentDescription="@string/app_name"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/licenseNo" />

        <TextView
            android:id="@+id/licenseNo"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing=".05"
            android:text="License Number"
            android:textAlignment="center"
            android:textColor="@color/darkBlueText"
            android:textSize="@dimen/normalText"
            app:layout_constraintBottom_toTopOf="@+id/stampImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>